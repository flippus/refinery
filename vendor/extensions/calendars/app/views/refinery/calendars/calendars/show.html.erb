<% content_for :body_content_title do %>
  <%= @calendar.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @calendar.name %>
    </p>
  </section>
  <section>
    <h1>Room</h1>
    <p>
      <%=raw @calendar.room %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @calendar.date %>
    </p>
  </section>
  <section>
    <h1>Host Name</h1>
    <p>
      <%=raw @calendar.host_name %>
    </p>
  </section>
  <section>
    <h1>Host Email</h1>
    <p>
      <%=raw @calendar.host_email %>
    </p>
  </section>
  <section>
    <h1>Contact Email</h1>
    <p>
      <%=raw @calendar.contact_email %>
    </p>
  </section>
  <section>
    <h1>Comment</h1>
    <p>
      <%=raw @calendar.comment %>
    </p>
  </section>
  <section>
    <h1>Admission</h1>
    <p>
      <%=raw @calendar.admission %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @calendar.link %>
    </p>
  </section>
  <section>
    <h1>Published</h1>
    <p>
      <%=raw @calendar.published %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="calendars">
      <% @calendars.each do |calendar| %>
        <li>
          <%= link_to calendar.name, refinery.calendars_calendar_path(calendar) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
