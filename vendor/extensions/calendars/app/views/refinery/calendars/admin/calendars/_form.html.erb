<%= form_for [refinery, :calendars_admin, @calendar] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @calendar,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :location_id -%>
    <%= f.collection_select(:location_id, Location.all, :id, :name, {include_blank: true}) -%>
  </div>

  <div class='field'>
    <%= f.label :new_location_id -%>
    <%= f.text_field :new_location_id -%>
  </div>

  <div class='field'>
    <%= f.label :category_id -%>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {include_blank: true}) -%>
  </div>

  <div class='field'>
    <%= f.label :new_category_id -%>
    <%= f.text_field :new_category_id -%>
  </div>

  <div class='field'>
    <%= f.label :room -%>
    <%= f.text_field :room -%>
  </div>

  <div class='field'>
    <%= f.label :date -%>
    <%= f.datetime_select :date -%>
  </div>

  <div class='field'>
    <%= f.label :host_name -%>
    <%= f.text_field :host_name -%>
  </div>

  <div class='field'>
    <%= f.label :host_name -%>
    <%= f.text_field :host_name -%>
  </div>

  <div class='field'>
    <%= f.label :host_email -%>
    <%= f.text_field :host_email -%>
  </div>

  <div class='field'>
    <%= f.label :contact_email -%>
    <%= f.text_field :contact_email -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:comment],
                :object => "calendars/calendar" -%>
  </div>

  <div class='field'>
    <%= f.label :admission -%>
    <%= f.text_field :admission -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <div class='field'>
    <%= f.label :published -%>
    <%= f.check_box :published, :checked => @calendar[:published] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.calendars.admin.calendars.calendar'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @calendar.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
