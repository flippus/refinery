<ul>
  <% if ::Refinery::Calendars::Admin::CalendarsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.calendars_admin_calendars_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_calendars_admin_calendar_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Calendars::Admin::CalendarsController.sortable? && ::Refinery::Calendars::Calendar.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Calendars"),
                 refinery.calendars_admin_calendars_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Calendars"),
                 refinery.calendars_admin_calendars_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
