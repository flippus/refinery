<% content_for :body_content_title do %>
  <%= @location.name %>
<% end %>

<% content_for :body do %>

  <section>
    <h1>Name</h1>
    <p>

      <%=raw @location.name %>

    </p>
  </section>

<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="locations">
      <% @locations.each do |location| %>
        <li>
          <%= link_to location.name, refinery.calendar_location_path(location) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
